<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/backgroundLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controller.MainActivity"
    android:background="@color/light_sage">


    <ImageButton
        android:id="@+id/activity_main_button_commentary"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        tools:ignore="ContentDescription"
        app:srcCompat="@drawable/ic_note_add_black"
        android:background="@android:color/transparent"
        android:onClick="buttonClicked"
        />


    <ImageButton
        android:id="@+id/activity_main_button_history"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/activity_main_button_commentary"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        tools:ignore="ContentDescription"
        app:srcCompat="@drawable/ic_history_black"
        android:background="@android:color/transparent"
        android:onClick="buttonClicked"
        />


    <ImageView
        android:id="@+id/activity_main_smiley"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/smiley_happy"
        tools:ignore="ContentDescription"
        />







</RelativeLayout>